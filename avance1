        cout << "\n\t Â¿Quiere agregar otro articulo? 1=si otro=no ";
        cin >> op2;
        if (op2 == 1)
        {
            system("pause");
            return main();
        }
        break;
    case 2:
        break;
    case 3:
        break;
    case 4:
        break;
    case 5:
        system("cls"); // limpiar pantalla
        return main();
        break;
    case 6:
        cout << "bye bye" << endl;
        exit(1); // cierra la pantalla
        break;
    default:
        cout << "volvemos a intentar";
        system("cls");
        return main();
        break;

    }


}
